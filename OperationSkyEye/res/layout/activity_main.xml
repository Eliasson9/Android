<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.operationskyeyev2.MainActivity">

    
    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_above="@+id/mapLayout"
        android:background="@layout/gradient_box"
        android:padding="8dp"
        android:layout_height="fill_parent">
        
        <RelativeLayout
            android:id="@+id/userLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@layout/gradient_box_light"
            android:layout_width="112dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="4dp"
            android:layout_height="fill_parent">
            
            <RelativeLayout
				android:id="@+id/separatorLayout"
				android:layout_width="fill_parent"
				android:layout_alignParentTop="true"
				android:background="@layout/gradient_box_dark"
				android:layout_height="6dp">
			</RelativeLayout>
			
            <ImageView 
                android:id="@+id/picBox"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@layout/pic_box" 
                android:layout_above="@+id/userName"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
            <TextView
                android:id="@+id/userName"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_centerHorizontal="true"
                android:text="Clark Kent"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_alignParentBottom="true" 
                />
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/statusLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/userLayout"
            android:background="@layout/gradient_box_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:hint="What are you up to?" >

                <requestFocus />
            </EditText>
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/miscLayout"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/statusLayout"
            android:layout_toRightOf="@+id/userLayout"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <TableLayout
            	android:layout_width="fill_parent"
            	android:layout_height="fill_parent"
            	android:stretchColumns="*"
            	android:background="#00000000">
                <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_height="fill_parent"
                            android:minHeight="300dp"
                            android:layout_width="fill_parent">
                            <RelativeLayout
                                android:layout_marginRight="2dp"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                >
                                <RelativeLayout
							        android:id="@+id/separatorLayout"
							        android:layout_width="fill_parent"
							        android:layout_alignParentTop="true"
							        android:background="@layout/gradient_box_dark"
							        android:layout_height="6dp">
							        
							    </RelativeLayout>
							    <RelativeLayout 
	                                android:layout_height="fill_parent"
	                                android:layout_width="fill_parent"
	                                android:layout_above="@+id/downButtonLayout"
	                                android:layout_below="@+id/separatorLayout"
	                                android:background="@layout/gradient_box_light_nocorner"
	                                android:layout_centerHorizontal="true"
	                                android:gravity="center"
	                                >
		                            <TextView
		                                android:id="@+id/firstMiscText"
		                                android:text="Off"
		                                android:textSize="20sp"
		                                android:layout_centerHorizontal="true"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:textColor="#000000"
		                                android:gravity="center"/>
		                            <TextView
		                                android:text="Online"
		                                android:textSize="12sp"
		                                android:layout_width="wrap_content"
		                                android:layout_below="@+id/firstMiscText"
		                                android:layout_centerHorizontal="true"
		                                android:layout_height="wrap_content"
		                                android:textColor="#000000"
		                                android:gravity="center"/>

	                            </RelativeLayout>
	                            	<RelativeLayout
	                            	    android:id="@+id/downButtonLayout"
		                                android:layout_alignParentBottom="true"
		                                android:layout_width="fill_parent"
		                                android:layout_height="16dp"
		                                android:padding="4dp"
		                                android:background="@layout/button_box" 
		                                >
		      							<ImageView
		      							    android:layout_height="fill_parent"
		      							    android:layout_width="wrap_content"
		      							    android:src="@drawable/arrow_down"
		      							    android:scaleType="fitCenter" 
		      							    android:layout_centerInParent="true"
		      							    />
		                            </RelativeLayout>
                            </RelativeLayout>
                            
                            

							<RelativeLayout
                                android:layout_marginRight="1dp"
                                android:layout_marginLeft="1dp"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                >
                                <RelativeLayout
							        android:id="@+id/separatorLayout"
							        android:layout_width="fill_parent"
							        android:layout_alignParentTop="true"
							        android:background="@layout/gradient_box_dark"
							        android:layout_height="6dp">
							        
							    </RelativeLayout>
							    <RelativeLayout 
	                                android:layout_height="fill_parent"
	                                android:layout_width="fill_parent"
	                                android:layout_above="@+id/downButtonLayout"
	                                android:layout_below="@+id/separatorLayout"
	                                android:background="@layout/gradient_box_light_nocorner"
	                                android:layout_centerHorizontal="true"
	                                android:gravity="center"
	                                >
		                            <TextView
		                                android:id="@+id/secondMiscText"
		                                android:text="Off"
		                                android:textSize="20sp"
		                                android:layout_centerHorizontal="true"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:textColor="#000000"
		                                android:gravity="center"/>
		                            <TextView
		                                android:text="Friends"
		                                android:textSize="12sp"
		                                android:layout_width="wrap_content"
		                                android:layout_below="@+id/secondMiscText"
		                                android:layout_centerHorizontal="true"
		                                android:layout_height="wrap_content"
		                                android:textColor="#000000"
		                                android:gravity="center"/>

	                            </RelativeLayout>
	                            	<RelativeLayout
	                            	    android:id="@+id/downButtonLayout"
		                                android:layout_alignParentBottom="true"
		                                android:layout_width="fill_parent"
		                                android:layout_height="16dp"
		                                android:padding="4dp"
		                                android:background="@layout/button_box" 
		                                >
		      							<ImageView
		      							    android:layout_height="fill_parent"
		      							    android:layout_width="wrap_content"
		      							    android:src="@drawable/arrow_down"
		      							    android:scaleType="fitCenter" 
		      							    android:layout_centerInParent="true"
		      							    />
		                            </RelativeLayout>
                            </RelativeLayout>
                            
                            <RelativeLayout
                                android:layout_marginLeft="2dp"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                >
                                <RelativeLayout
							        android:id="@+id/separatorLayout"
							        android:layout_width="fill_parent"
							        android:layout_alignParentTop="true"
							        android:background="@layout/gradient_box_dark"
							        android:layout_height="6dp">
							        
							    </RelativeLayout>
							    <RelativeLayout 
	                                android:layout_height="fill_parent"
	                                android:layout_width="fill_parent"
	                                android:layout_above="@+id/downButtonLayout"
	                                android:layout_below="@+id/separatorLayout"
	                                android:background="@layout/gradient_box_light_nocorner"
	                                android:layout_centerHorizontal="true"
	                                android:gravity="center"
	                                >
		                            <TextView
		                                android:id="@+id/thirdMiscText"
		                                android:text="Off"
		                                android:textSize="20sp"
		                                android:layout_centerHorizontal="true"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:textColor="#000000"
		                                android:gravity="center"/>
		                            <TextView
		                                android:text="Status"
		                                android:textSize="12sp"
		                                android:layout_width="wrap_content"
		                                android:layout_below="@+id/thirdMiscText"
		                                android:layout_centerHorizontal="true"
		                                android:layout_height="wrap_content"
		                                android:textColor="#000000"
		                                android:gravity="center"/>

	                            </RelativeLayout>
	                            	<RelativeLayout
	                            	    android:id="@+id/downButtonLayout"
		                                android:layout_alignParentBottom="true"
		                                android:layout_width="fill_parent"
		                                android:layout_height="16dp"
		                                android:padding="4dp"
		                                android:background="@layout/button_box" 
		                                >
		      							<ImageView
		      							    android:layout_height="fill_parent"
		      							    android:layout_width="wrap_content"
		      							    android:src="@drawable/arrow_down"
		      							    android:scaleType="fitCenter" 
		      							    android:layout_centerInParent="true"
		      							    />
		                            </RelativeLayout>
                            </RelativeLayout>

                        </TableRow>
            </TableLayout>
            
       	</RelativeLayout>
        
    </RelativeLayout>
    
        
        

    
    <RelativeLayout
        android:id="@+id/mapLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="380dp">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.MapFragment"/>

    </RelativeLayout>
    
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/mapLayout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/reload_48"
        android:text=""
        android:onClick="onClick_refresh"
        android:id="@+id/refreshButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>